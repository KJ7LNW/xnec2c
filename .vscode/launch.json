{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug xnec2c",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/src/xnec2c",
            "args": ["-vvvvd", "examples/13cm_Yagi.nec"],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ],
            "preLaunchTask": "build",
            "miDebuggerPath": "/usr/bin/gdb"
        }
    ]
}